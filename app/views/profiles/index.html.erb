<h1>User Profiles</h1>
<%if current_user.try(:admin?)%>
  <% @profiles.each do |profile|%>
    <div><%=profile[:full_name]%>
        <%= form_tag(url: profile_path(profile[:id]), method: :create, user: profile[:user]) do%>
        <div class="actions">
          <%if profile[:admin]%>
          <p>
            <%= button_tag("Admin User", class: "btn btn-primary") %>
          </p>
          <%else%>
          <p>
            <%= button_tag("Student", class: "btn btn-danger") %>
          </p>
          <%end%>
        </div>
      <%end%>
  </div>
  <%end%>
<%end%>
